<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/cakhoto"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txtTenMonCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Tên món"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:fontFamily="@font/baloo_bhaina"
                android:textColor="#FFD300">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyên liệu"
                android:textColor="#D30000"
                android:fontFamily="@font/baloo_bhaina"
                android:textSize="20sp"
                >
            </TextView>
            <TextView
                android:id="@+id/txtNguyenLieuCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Nguyên liệu"
                android:textSize="15sp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hướng dẫn"
                android:textColor="#89cfef"
                android:fontFamily="@font/baloo_bhaina"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:id="@+id/txtHuongDanCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="Hướng dẫn"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>